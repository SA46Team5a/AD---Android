<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/employeedropdownlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_update_location">


    <Button
        android:id="@+id/confrimButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="confirm"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioButton
        android:id="@+id/collectPoint1RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stationery Store- Administration Building(09:30)"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="66dp" />

    <RadioButton
        android:id="@+id/collectPoint2RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Management School(11:00am)"
        app:layout_constraintTop_toBottomOf="@+id/collectPoint1RadioButton"
        tools:layout_editor_absoluteX="16dp" />

    <RadioButton
        android:id="@+id/collectPoint3RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Medical School(09:30am)"
        app:layout_constraintTop_toBottomOf="@+id/collectPoint2RadioButton"
        tools:layout_editor_absoluteX="16dp" />

    <RadioButton
        android:id="@+id/collectPoint4RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Engineering School(11:00am)"
        app:layout_constraintTop_toBottomOf="@+id/collectPoint3RadioButton"
        tools:layout_editor_absoluteX="16dp" />

    <RadioButton
        android:id="@+id/collectPoint5RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Science School(09:30am)"
        app:layout_constraintTop_toBottomOf="@+id/collectPoint4RadioButton"
        tools:layout_editor_absoluteX="16dp" />

    <RadioButton
        android:id="@+id/collectPoint6RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="University Hospital(11:00am)"
        app:layout_constraintTop_toBottomOf="@+id/collectPoint5RadioButton"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/digitpasscodeLabel"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="4-digit passcode"
        app:layout_constraintBottom_toTopOf="@+id/confrimButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p6radioButton"
        app:layout_constraintVertical_bias="0.622" />

    <EditText
        android:id="@+id/digitpasscodeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberPassword"
        app:layout_constraintBottom_toTopOf="@+id/confrimButton"
        app:layout_constraintStart_toEndOf="@+id/digitpasscodeLabel"
        app:layout_constraintTop_toBottomOf="@+id/p6radioButton"
        app:layout_constraintVertical_bias="0.666" />


</android.support.constraint.ConstraintLayout>